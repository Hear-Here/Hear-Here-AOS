<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="com.hearhere.presentation.post.PostViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".post.SearchTitleFragment">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/charector"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/default_character"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:visibility="@{viewmodel.titleBinder.size ==0 ?View.VISIBLE: View.GONE}"
            />

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/marker_list_rv"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </ScrollView>


    </FrameLayout>
</layout>