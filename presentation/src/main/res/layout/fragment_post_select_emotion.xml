<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="context"
            type="com.hearhere.presentation.post.PostSelectEmotionFragment" />

        <variable
            name="view"
            type="com.hearhere.presentation.post.PostSelectOptionViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".post.PostSelectGenreFragment">

        <TextView
            android:id="@+id/title_tv"
            style="@style/body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="58dp"
            android:text="지금 어떤 기분인가요?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:columnCount="3"
            android:rowCount="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_tv">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/smile_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"
                android:src="@drawable/smile"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:background="@drawable/basic_button_background_selector"
                />

            <com.hearhere.presentation.common.component.BasicButton
                style="@style/button_selector"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"/>


            <com.hearhere.presentation.common.component.BasicButton
                style="@style/button_selector"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"/>


            <com.hearhere.presentation.common.component.BasicButton
                style="@style/button_selector"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"/>

            <com.hearhere.presentation.common.component.BasicButton
                style="@style/button_selector"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"/>

            <com.hearhere.presentation.common.component.BasicButton
                style="@style/button_selector"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"/>

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>