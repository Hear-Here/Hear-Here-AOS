<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="context"
            type="com.hearhere.presentation.post.PostSelectWeatherFragment" />

        <variable
            name="view"
            type="com.hearhere.presentation.post.PostSelectOptionViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".post.PostSelectGenreFragment">

        <TextView
            android:id="@+id/title_tv"
            style="@style/body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="58dp"
            android:text="지금 날씨는 어떤가요?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:columnCount="3"
            android:rowCount="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_tv">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/sunny_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"
                android:adjustViewBounds="true"
                android:background="@drawable/basic_button_background_selector"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/sunny" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/normal_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"
                android:adjustViewBounds="true"
                android:background="@drawable/basic_button_background_selector"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/normal" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/cloudy_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"
                android:adjustViewBounds="true"
                android:background="@drawable/basic_button_background_selector"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/cloudy" />


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/rainy_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"
                android:adjustViewBounds="true"
                android:background="@drawable/basic_button_background_selector"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/rainy" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/windy_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"
                android:adjustViewBounds="true"
                android:background="@drawable/basic_button_background_selector"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/windy" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/snowy_btn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"
                android:adjustViewBounds="true"
                android:background="@drawable/basic_button_background_selector"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/snowy" />


        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>