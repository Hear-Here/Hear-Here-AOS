        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/gray90</item>
    </style>


    <style name="sub" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/pretendardlight</item>
        <item name ="fontWeight">300</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/gray50</item>
    </style>

