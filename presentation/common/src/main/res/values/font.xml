        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/gray90</item>
    </style>

    <style name="title" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/pretendardmedium</item>
        <item name ="fontWeight">700</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/gray90</item>
    </style>


    <style name="subtitle1" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/pretendardregular</item>
        <item name ="fontWeight">400</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">16dp</item>
